<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Create Account</h1>
</div>

<br>

<div class="container">
  <%= form_tag users_path do %>
  <div class="form-group">
    <%= text_field_tag('first_name', '', class:'form-control', required:'true', placeholder:"First Name", required:'true')%>
  </div>
  <div class="form-group">
    <%= text_field_tag('last_name', '', class:'form-control', required:'true', placeholder:"Last Name", required:'true')%>
  </div>
  <div class="form-group">
    <%= text_field_tag('city', '', class:'form-control', required:'true', placeholder:"City", required:'true')%>
  </div>
  <div class="form-group">
    <%= text_field_tag('email', '', class:'form-control', required:'true', placeholder:"Email", required:'true')%>
  </div>
  <div class="form-group">
    <%= text_field_tag('password', '', id:'inputPassword', type:'password', class:'form-control', placeholder:"Password (minimum of 6 caracters)", required:'true') %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-default btn btn-success' %>
</div>
<% end %>
